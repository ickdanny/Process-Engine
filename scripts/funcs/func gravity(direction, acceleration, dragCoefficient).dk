# func gravity(direction, acceleration, dragCoefficient)

let velocity;
let speed;
let drag;
let accelerationPolar = makePolar(acceleration, direction);

while(true){
    velocity = entityVelocity();
    velocity = velocity + accelerationPolar;
    let speed = getR(velocity);
    let drag = speed * speed * dragCoefficient; #technically should have a 0.5 term
    setVelocity(setR(velocity, speed - drag));
    stall();
}