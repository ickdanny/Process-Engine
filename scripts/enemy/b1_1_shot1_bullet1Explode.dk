let symmetry = diff(4, 5, 6, 7);
let baseAngle = random(0.0, 360.0);
let angleRand = 20.0;
let baseSpeed = 1.3;
let speedRand = 0.5;

let pos = entityPosition();
func spawnBullet(velocity){
    velocity = setR(velocity, getR(velocity) + random(-speedRand, speedRand));
    velocity = setTheta(velocity, getTheta(velocity) + random(-angleRand, angleRand));
    spawn("mediumLRed", pos, velocity, "b1_1_shot1_bullet2");
}

ring(makePolar(baseSpeed, baseAngle), symmetry, spawnBullet);