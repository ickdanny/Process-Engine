let numSpawns = diff(2, 3, 4, 5);
let tick = diff(10, 7, 5, 5);
let speed = diff(1.0, 1.2, 1.4, 1.6) * 1.7;

setClearMarker();
timer(trapLifetime);

let position = entityPosition();
func spawnBullet(velocity){
    spawn("sharpLBlue", position, velocity);
}

let angle = angleToPlayer();
let velocity = makePolar(speed, angle);
for(let i = 0; i < numSpawns; i = i + 1){
    spawnBullet(velocity);
    timer(tick);
}

removeEntity();