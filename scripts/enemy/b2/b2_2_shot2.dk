let numSpawns = diff(1, 1, 2, 3);
let tick = 49;
let arcSymmetry = diff(1, 3, 3, 5);
let speed = 0.6;
let arcIncrement = diff(0.0, 35.0, 30.0, 25.0);

let position = entityPosition(); # boss stationary during whole shot
func spawnBullet(velocity){
    spawn("largeBlue", position, velocity);
}

let baseVelocity;
for(let i = 0; i < numSpawns; i = i + 1){
    baseVelocity = makePolar(speed, angleToPlayer());
    arc(baseVelocity, arcSymmetry, arcIncrement, spawnBullet);
    timer(tick);
}