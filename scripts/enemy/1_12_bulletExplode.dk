let symmetry = diff(8, 12, 16, 24);
let columnCount = diff(2, 3, 4, 5);
let baseSpeed = diff(1.6, 1.4, 1.2, 1.0);
let speedIncrement = diff(0.5, 0.45, 0.4, 0.35);
let angle = angleToPlayer();

