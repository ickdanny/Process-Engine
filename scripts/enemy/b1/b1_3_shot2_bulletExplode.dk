let symmetry = 4;
let columnCount = diff(2, 3, 4, 5);
let speedIncrement = diff(0.5, 0.4, 0.3, 0.2) * 0.75;
let baseSpeed = diff(1.2, 1.0, 0.8, 0.6);
let baseAngle = randomAngle();
let baseVelocity = makePolar(baseSpeed, baseAngle);

let pos = entityPosition();
func spawnBullet(velocity){
    spawn("sharpBlue", pos, velocity);
}

func spawnColumn(velocity){
    column(velocity, columnCount, speedIncrement, spawnBullet);
}

ring(baseVelocity, symmetry, spawnColumn);